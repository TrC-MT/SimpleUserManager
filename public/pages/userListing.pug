html
    head
        //- meta charset="UTF-8" 
        //- meta http-equiv="X-UA-Compatible" content="IE=edge" 
        //- meta name="viewport" content="width=device-width, initial-scale=1.0" 
        title List of users
        link(rel='stylesheet', href='../styles.css')
        script(src="../../app.js") 
    head
body 
    h1 USER LIST
    table
        tr 
            th Username
            th Name
            th Email
            th Age
            th Edit
            th Delete
        
        each user in users 
            tr
                td #{user.username}
                td #{user.name}
                td #{user.email}
                td #{user.age}
                td
                    a(href='/userEdit/' + user.id) EDIT
                td
                    button(onclick="del(#{user.id})") DELETE
