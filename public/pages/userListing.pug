        title List of users
        link(rel='stylesheet', href='../styles.css')
    head
body 
    h1 USER LIST
    table
        tr 
            th Username
            th Name
            th Email
            th Age
            th Edit
            th Delete
        
        each user in users 
            tr
                td #{user.username}
                td #{user.name}
                td #{user.email}
                td #{user.age}
                td
                    button EDIT
                td 
                    button DELETE
